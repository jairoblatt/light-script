{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "declaration": true,
     "declarationDir": "dist/types",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "include": ["package", "dev/vite-env.d.ts", "dev/vite-env.d.ts"]
}
